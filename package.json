  "description": "REST API server powered by Express/MongoDB with user authentication via JWT",
  "main": "index.js",
  "repository": "https://gitlab.com/arthurkao/express-mongoose-rest-api.git",
  "author": "Arthur C. Kao <arthurckao@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "express",
    "mongoose",
    "openapi",
    "rest",
    "jwt"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "helmet": "^4.1.0",
    "joi": "^14.0.4",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mongoose": "^5.10.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-sorted": "^0.2.0",
    "faker": "^5.1.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "start": "nodemon -r dotenv/config index.js",
    "test:unit": "./node_modules/mocha/bin/mocha --file ./test/setup.js --recursive ./test/unit/*",
    "test:integration": "./node_modules/mocha/bin/mocha --file ./test/setup.js ./test/integration/dbSetup.js --recursive ./test/integration/*",
